<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_wallet_token_layout"
    style="@style/ButtonBackgroundInsideEffectStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="19dp">

    <TextView
        android:id="@+id/token_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/add_token_info"
        android:layout_toRightOf="@+id/token_icon_layout"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/token_symbol"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/add_token_info"
        android:layout_toRightOf="@+id/token_icon_layout"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/token_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/token_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@+id/add_token_info"
        android:layout_toRightOf="@+id/token_icon_layout"
        android:ellipsize="middle"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="13sp" />

    <FrameLayout
        android:id="@+id/token_icon_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/token_coin_icon_bg"
        android:padding="5dp">

        <ImageView
            android:id="@+id/token_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/token_default_icon" />
    </FrameLayout>

    <ImageView
        android:id="@+id/add_token_info"
        style="@style/ButtonBackgroundEffectStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:paddingRight="4dp"
        android:scaleType="center"
        android:src="@drawable/add" />

    <ImageView
        android:id="@+id/add_token_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:padding="15dp"
        android:paddingRight="4dp"
        android:scaleType="center"
        android:src="@drawable/check_box_selected"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/token_address"
        android:background="#ebebeb"
        android:paddingLeft="19dp"
        android:paddingRight="19dp" />
</RelativeLayout>