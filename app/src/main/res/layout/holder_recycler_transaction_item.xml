<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_wallet_token_layout"
    android:layout_width="wrap_content"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/transaction_state_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/transaction_token"
        android:layout_toRightOf="@+id/transaction_state_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxWidth="140dp"
            android:singleLine="true"
            android:textColor="@color/text_title"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/transaction_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_999999"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/transaction_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#DDDDDD" />
</RelativeLayout>