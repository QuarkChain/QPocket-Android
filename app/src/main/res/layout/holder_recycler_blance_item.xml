<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_wallet_token_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <TextView
        android:id="@+id/chain_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/wallet_chain_id"
        android:textColor="@color/text_title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/shard_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chain_id"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/wallet_shard_id"
        android:textColor="@color/text_title"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/balance_token_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/balance_token"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.7"
        android:text="@string/wallet_balance"
        android:textColor="@color/text_message"
        android:textSize="13sp" />

    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/balance_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/balance_token_price"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="15sp"
        android:textStyle="bold"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <androidx.appcompat.widget.AppCompatTextView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/balance_token_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.8"
        android:singleLine="true"
        android:textColor="@color/text_message"
        android:textSize="13sp"
        app:autoSizeStepGranularity="2sp"
        app:autoSizeTextType="uniform" />

    <ImageView
        android:id="@+id/switch_chain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/chain_current_item_en"
        android:visibility="gone" />
</RelativeLayout>