<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_wallet_token_layout"
    style="@style/ButtonBackgroundInsideEffectStyle"
    android:layout_width="wrap_content"
    android:layout_height="64dp"
    android:paddingLeft="19dp"
    android:paddingRight="19dp">

    <ImageView
        android:id="@+id/token_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:background="@drawable/wallet_icon_bg"
        android:padding="7dp"
        android:src="@drawable/token_default_icon" />

    <TextView
        android:id="@+id/token_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/token_img"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/token_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/token_img"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/token_name"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/text_title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/token_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/token_count"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/token_name"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="12sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#ebebeb" />
</RelativeLayout>